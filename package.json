  "devDependencies": {
    "ava": "^2.4.0",
    "commander": "^3.0.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": ">=3",
    "lint-staged": ">=9",
    "sql-fixtures": "^1.0.0",
    "stelace-server": "git+ssh://git@github.com/stelace/stelace-core.git#dev",
    "supertest": "^4.0.2",
    "tap-xunit": "^2.4.1"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
